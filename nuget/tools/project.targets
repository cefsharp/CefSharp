<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <BuildDependsOn>
      $(BuildDependsOn);
      CefSharpPostBuild
    </BuildDependsOn>
    <CleanDependsOn>
      $(CleanDependsOn);
      CefSharpPostClean
    </CleanDependsOn>
  </PropertyGroup>

  <Target Name="CefSharpPostBuild">
    <MSBuild Projects="$(MSBuildThisFileDirectory)\package.targets"
             Properties="TargetDir=$(TargetDir)"
             Targets="PostBuild"
             UnloadProjectsOnCompletion="true" />
  </Target>

  <Target Name="CefSharpPostClean">
    <MSBuild Projects="$(MSBuildThisFileDirectory)\package.targets"
             Properties="TargetDir=$(TargetDir)"
             Targets="PostClean"
             UnloadProjectsOnCompletion="true" />
  </Target>
  
</Project>