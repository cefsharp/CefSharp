<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Choose>
    <When Condition="'$(Platform)' == 'x64'">
      <Choose>
        <When Condition="'$(TargetFrameworkVersion)' == 'v4.0'">
		  <ItemGroup>
            <Reference Include="CefSharp.WinForms">
              <HintPath>$(MSBuildThisFileDirectory)..\CefSharp-Net40\x64\CefSharp.WinForms.dll</HintPath>
              <Private>False</Private>
            </Reference>
          </ItemGroup>
        </When>
        <Otherwise>
          <ItemGroup>
            <Reference Include="CefSharp.WinForms">
              <HintPath>$(MSBuildThisFileDirectory)..\CefSharp\x64\CefSharp.WinForms.dll</HintPath>
              <Private>False</Private>
            </Reference>
          </ItemGroup>
        </Otherwise>
      </Choose>
    </When>
    <!-- x86, Win32 and AnyCPU -->
    <Otherwise>
      <Choose>
        <When Condition="'$(TargetFrameworkVersion)' == 'v4.0'">
		  <ItemGroup>
            <Reference Include="CefSharp.WinForms">
              <HintPath>$(MSBuildThisFileDirectory)..\CefSharp-Net40\x86\CefSharp.WinForms.dll</HintPath>
              <Private>False</Private>
            </Reference>
          </ItemGroup>
        </When>
        <Otherwise>
          <ItemGroup>
            <Reference Include="CefSharp.WinForms">
              <HintPath>$(MSBuildThisFileDirectory)..\CefSharp\x86\CefSharp.WinForms.dll</HintPath>
              <Private>False</Private>
            </Reference>
          </ItemGroup>
        </Otherwise>
      </Choose>
    </Otherwise>
  </Choose>
</Project>
