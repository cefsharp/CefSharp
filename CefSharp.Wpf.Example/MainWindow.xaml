<Window x:Class="CefSharp.Wpf.Example.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:CefSharp.Wpf.Example.Controls"
        xmlns:mvvm="clr-namespace:CefSharp.Wpf.Example.Mvvm"
        Title="CefSharp.Wpf.Example"
        WindowState="Maximized">
    <Window.InputBindings>
        <KeyBinding Key="T" Modifiers="Control" Command="New"/>
        <KeyBinding Key="W" Modifiers="Control" Command="Close"/>
        <KeyBinding Key="R" Modifiers="Control" Command="Refresh"/>
        <KeyBinding Key="F5" Command="Refresh"/>
        <KeyBinding Key="F5" Modifiers="Control" Command="Refresh" CommandParameter="Force"/>
        <KeyBinding Key="F6" Command="{x:Static mvvm:CefBrowserRoutedCommands.FocusAddress}" />
    </Window.InputBindings>
    <DockPanel>
        <Menu Width="Auto" FontSize="14" IsMainMenu="True" DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="New Tab" InputGestureText="Ctrl+T" Command="New" />
                <MenuItem Header="Close Tab" InputGestureText="Ctrl+W" Command="Close" />
                <MenuItem Header="Reload Tab" InputGestureText="Ctrl+R" Command="Refresh" />
                <Separator />
                <MenuItem Header="Exit" Command="{Binding ExitCommand}" />
            </MenuItem>
        </Menu>
        <controls:NonReloadingTabControl x:Name="TabControl"
                               Margin="0,5,0,0"
                               ItemsSource="{Binding BrowserTabs, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                               SelectedIndex="0">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Title}"/>
                        <Button Content="X"
                                Height="20"
                                Width="20"
                                FontFamily="Courier"
                                FontWeight="Bold"
                                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                Command="Close"
                                FontSize="10"
                                Padding="0"
                                Margin="10,0,0,0"
                                ToolTip="Close"/>
                    </StackPanel>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <ContentControl Content="{Binding}" />
                </DataTemplate>
            </TabControl.ContentTemplate>
        </controls:NonReloadingTabControl>
    </DockPanel>
</Window>
