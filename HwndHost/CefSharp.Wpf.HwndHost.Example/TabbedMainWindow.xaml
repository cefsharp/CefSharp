<Window x:Class="CefSharp.Wpf.HwndHost.Example.TabbedMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="CefSharp.Wpf.HwndHost.Example - TabbedMainWindow" Height="450" Width="800">
    <Grid>
        <Button Height="20" VerticalAlignment="Top" Content="New tab" Click="OnNewTabButtonClick"/>
        <Button Height="20" Margin="0,20,0,0" VerticalAlignment="Top" Content="Close current tab" Click="OnCloseTabButtonClick"/>
        <TabControl x:Name="Tabs" Margin="0,40,0,0"/>
    </Grid>
</Window>
